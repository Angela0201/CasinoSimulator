<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:minHeight="56dp"
        app:contentInsetStartWithNavigation="24dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/jackpotBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_jackpot_banner"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtJackpotTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jackpot"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txtJackpotAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jackpot_amount_preview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/jackpotBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingBottom="18dp">

            <TextView
                android:id="@+id/txtBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"/>

            <TextView
                android:id="@+id/txtPickLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pick_number"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleNumbersRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:singleSelection="true"
                app:selectionRequired="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnN1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_num_1"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnN2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_num_2"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnN3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_num_3"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleNumbersRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:singleSelection="true"
                app:selectionRequired="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnN4"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_num_4"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnN5"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_num_5"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnN6"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_num_6"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <ImageView
                android:id="@+id/imgDice"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/dice_1"
                android:contentDescription="@null"/>

            <TextView
                android:id="@+id/txtRolled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txtBetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bet_fixed"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleBetRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:singleSelection="true"
                app:selectionRequired="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBet50"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_bet_50"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBet100"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_bet_100"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleBetRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:singleSelection="true"
                app:selectionRequired="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBet200"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_bet_200"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBet500"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dice_bet_500"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#5E55B3"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
